<script src="~/Dashboard/assets/js/core/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        // Activate tooltip
        $('[data-toggle="tooltip"]').tooltip();


        //Get Class_Id for Delete Added By Absar
        $('table .delete').on('click', function () {
            var Class_Id = $(this).parent().find('.Class_Id').val();
            $('#deleteEmployeeModal #Class_Id').val(Class_Id);
        });

        //Get Class_Id for Edit Added By Absar
        $('table .edit').on('click', function () {
            var id = $(this).parent().find('.Class_Id').val();
            $.ajax({

                type: 'GET',
                url: '/admin/class/editClass/' + id,
                success: function (objClass) {

                    objClass = JSON.stringify(objClass);

                    alert(objClass.class_Id);
                    $('#editEmployeeModal #Class_Id').val(objClass["class_Id"]);
                    $('#editEmployeeModal #Class_Name').val('4');

                }
            });
        });

        // Select/Deselect checkboxes
        var checkbox = $('table tbody input[type="checkbox"]');
        $("#selectAll").click(function () {
            if (this.checked) {
                checkbox.each(function () {
                    this.checked = true;
                });
            } else {
                checkbox.each(function () {
                    this.checked = false;
                });
            }
        });
        checkbox.click(function () {
            if (!this.checked) {
                $("#selectAll").prop("checked", false);
            }
        });
    });
</script>