    <script>
        $(document).ready(function () {
            // Activate tooltip
            $('[data-toggle="tooltip"]').tooltip();


            //Get Class_Id for Delete Added By Absar
            $('table .delete').on('click', function () {
                var Role_Id = $(this).parent().find('.Role_Id').val();
                $('#deleteRoleModal #Role_Id').val(Role_Id);
            });

            //Get Class_Id for Edit Added By Absar
            $('table .edit').on('click', function () {
                var Role_Id = $(this).parent().find('.Role_Id').val();
                $.ajax({

                    type: 'GET',
                    url: '/admin/role/editRole/' + Role_Id,
                    success: function (objRole) {
                        //debugger;
                        //objRole = JSON.stringify(objRole);

                        //alert(objClass);
                        $('#editRoleModal #Role_Id').val(objRole.id);
                        $('#editRoleModal #Role_Name').val(objRole.name);

                    }
                });
            });

            // Select/Deselect checkboxes
            var checkbox = $('table tbody input[type="checkbox"]');
            $("#selectAll").click(function () {
                if (this.checked) {
                    checkbox.each(function () {
                        this.checked = true;
                    });
                } else {
                    checkbox.each(function () {
                        this.checked = false;
                    });
                }
            });
            checkbox.click(function () {
                if (!this.checked) {
                    $("#selectAll").prop("checked", false);
                }
            });
        });
    </script>